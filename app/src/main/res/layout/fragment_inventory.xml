<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/inventory_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/fab_inventory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:srcCompat="@android:drawable/ic_media_play"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/unique_tag_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Unique tags: 0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/unique_tag_per_10_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="New Unique Tags every 10s: 0"
            app:layout_constraintBottom_toTopOf="@+id/unique_tag_count"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/timer_value"
            android:layout_width="wrap_content"
            android.layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Timer: 00:00"
            app:layout_constraintBottom_toTopOf="@+id/unique_tag_per_10_sec"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/inventory_stop_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Stop Timer (s)"
            app:layout_constraintBottom_toTopOf="@+id/timer_value"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/quiet_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:hint="Quiet Timer (s)"
            app:layout_constraintBottom_toTopOf="@+id/inventory_stop_timer"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/select_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Select All"
            app:layout_constraintBottom_toTopOf="@+id/quiet_timer"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/checkbox_focus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Focus"
            app:layout_constraintBottom_toTopOf="@+id/select_all"
            app:layout_constraintStart_toStartOf="parent" />

        <CheckBox
            android:id="@+id/checkbox_unquiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Unquiet"
            app:layout_constraintBottom_toTopOf="@+id/checkbox_focus"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_clear_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Clear Screen"
            app:layout_constraintBottom_toTopOf="@+id/checkbox_unquiet"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button_quiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Quiet"
            app:layout_constraintBottom_toTopOf="@+id/button_clear_screen"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/yellow_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Y: 0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/green_count" />

        <TextView
            android:id="@+id/green_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="G: 0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/lgrey_count" />

        <TextView
            android:id="@+id/lgrey_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="GREY: 0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/white_count" />

        <TextView
            android:id="@+id/white_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="W: 0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>